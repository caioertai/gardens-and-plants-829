<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 ">
      <h1>Adding plant to <%= @garden.name %></h1>

      <!-- /gardens/184/plants -->
      <%= simple_form_for [@garden, @plant] do |f| -%>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.button :submit, class: "btn-primary" %>
      <% end -%>
    </div>
  </div>
</div>
