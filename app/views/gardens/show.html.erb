<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @garden.plants.each do |plant| %>
      <div class="col-4">
        <%= render "plants/card", plant: plant %>
      </div>
    <% end %>
    <div class="col-4">
      <%= link_to "Add a plant", new_garden_plant_path(@garden), class: "card-category bg-secondary" %>
    </div>
  </div>
</div>


