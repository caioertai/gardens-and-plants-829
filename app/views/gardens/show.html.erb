<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @garden.plants.each do |plant| %>
      <div class="col-4">
        <div
          class="mb-3 card-category"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url %>')">
          <%= plant.name %>
          <%= link_to '&times;'.html_safe, plant_path(plant), class: "card-remove-link", method: :delete %>
        </div>
      </div>
    <% end %>
    <div class="col-4">
      <%= link_to "Add a plant", new_garden_plant_path(@garden), class: "card-category bg-secondary" %>
    </div>
  </div>
</div>


